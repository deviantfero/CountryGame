<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.uca.parcial1.countrygame.QuestionFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:textColor="@color/colorPrimaryDark"
        android:gravity="center"
        android:text="@string/question1"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:contentDescription="@string/hello_blank_fragment"
            android:background="@drawable/sv"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/firstAnsRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:onClick="answerSelected"/>

            <Button
                android:id="@+id/secondAnsRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:onClick="answerSelected"/>

            <Button
                android:id="@+id/thirdAnsRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:onClick="answerSelected"/>

            <Button
                android:id="@+id/fourthAnsRadioButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:onClick="answerSelected"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>